<!-- config for WinSW , rename winsw.exe to demojetty12.exe and same xml name-->
<service>
    <id>demojetty12</id>
    <name>demojetty12 App</name>
    <description>Your Jetty web application running as a Windows service.</description>

	<!-- กำหนดการเขียน log -->
    <logpath>%BASE%\logs</logpath>
    <log mode="roll-by-size-time">
        <sizeThreshold>10240</sizeThreshold> 
		<pattern>yyyyMMdd</pattern>
        <autoRollAtTime>00:00:00</autoRollAtTime>
    </log>
    <!-- กรณีต้องการปิด log (จะมีผลเฉพาะ stdout,stderror เท่านั้น) -->
    <!-- <log mode="none"/> -->

    <executable>"%BASE%\jre21\bin\java.exe"</executable>
    <arguments>-Xrs -Xmx512m -jar "%BASE%\demojetty12-1.0.jar"</arguments>
       
    <shutdownTimeout>30000ms</shutdownTimeout>

    <stopparentprocessfirst>false</stopparentprocessfirst>
</service>